#include <iostream>
#include <queue>
#include <string>

using namespace std;

// Функция для добавления человека в очередь
void добавитьВОчередь(queue<string>& очередь, const string& имя) {
    очередь.push(имя);
    cout << имя << " встал(а) в очередь." << endl;
}

// Функция для обработки первого человека в очереди
void обработатьОчередь(queue<string>& очередь) {
    if (!очередь.empty()) {
        cout << "Обслужен: " << очередь.front() << endl;
        очередь.pop();
    } else {
        cout << "Очередь пустая." << endl;
    }
}

// Функция для показа текущей очереди
void показатьОчередь(const queue<string>& очередь) {
    queue<string> temp = очередь;
    
    if (temp.empty()) {
        cout << "Сейчас очередь пустая." << endl;
        return;
    }
    
    cout << "Текущая очередь: ";
    while (!temp.empty()) {
        cout << temp.front();
        temp.pop();
        if (!temp.empty()) cout << " <- ";
    }
    cout << endl;
}

int main() {
    queue<string> очередь; // Очередь людей

    // Добавляем людей в очередь
    добавитьВОчередь(очередь, "Анна");
    добавитьВОчередь(очередь, "Борис");
    добавитьВОчередь(очередь, "Виктор");
    
    // Показываем текущую очередь
    показатьОчередь(очередь);
    
    // Обслуживаем людей по очереди
    обработатьОчередь(очередь);
    показатьОчередь(очередь);
    
    обработатьОчередь(очередь);
    показатьОчередь(очередь);
    
    обработатьОчередь(очередь);
    показатьОчередь(очередь);
    
    // Попытка обслужить, когда очередь пустая
    обработатьОчередь(очередь);

    return 0;
}
